/*收货地址*/
.page{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}
.addr{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-bottom: 1rpx red solid;
  align-items: center;
}

.addr navigator {
  display:flex;
  width:100%;
  flex-direction: column;
}

.logistics{
  width: 90%;
  margin-left: 5%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.logisticsPeople{
  width: 25%;
  display: flex;
  flex-direction: row;
}
.inputs{
  width: 25%;
  display: flex;
}
.tel{
  width: 50%;
  display: flex;
  font-size: 35rpx;
}
.logisticsAddr{
  width: 90%;
  display: flex;
  margin-left: 5%;
  flex-direction: row;
  font-size: 35rpx;
  justify-content: center;
  align-items: center;
}
.logisticsAddrs{
  display: flex;
  width: 29%;
}
.logisticsAddrsName{
  display: flex;
  width: 75%;
}

