.arctic{
	width: 100%;
	height: 100%;
	display: flex;
	align-items: center;
	flex-direction: column;
	background-color: #F5F5F5;
}
.navigator01 {
	width: 100%;
	margin-bottom: 3%;
	background-color: #FFFFFF;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.img-artic{
	width: 90%;
	margin-top: 5%;
	display: flex;		
}
.contents{
	width: 90%;
	height: 100%;
	margin-bottom: 2%;
	margin-top: 3%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}
.authorTimes{
	width: 80%;
	height: 100%;
	display: flex;
	flex-direction: column;
}
.contents image{
	width: 45rpx;
	height: 45rpx;
	margin-top: 5%;
}
/*时间作者标题*/
.title{
	width: 98%;
	height: 50rpx;
	margin-top: 1%;
	display: flex;
	color: #666666;
}

.time-author{
	width: 95%;
	height: 50rpx;
	margin-top: 2%;
	display: flex;
	flex-direction: row;
	font-size: 30rpx;
	color: #999999;
}
.times{
	width: 35%;
	height: 25rpx;
	display: flex;
}

.author{
	width: 25%;
	height: 25rpx;
	display: flex;
}



