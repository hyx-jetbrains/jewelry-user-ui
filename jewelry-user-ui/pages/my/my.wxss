page{
  width: 100%;
  height: 100%;
  background-color: #F5F5F5;
}
.container{
  background-color: #FEE3CA;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333333;
}


.order {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 90rpx;
}
.myorder-text {
  font-size: 30rpx;
  color: gray;
  margin: 20rpx;
  width: 40%;
}
.myorderlook-text {
  font-size: 30rpx;
  color: gray;
  position: relative;
  right: 20rpx;
  width: 60%;
  text-align: right;
}
.next-image {
  width: 30rpx;
  height: 30rpx;
  
}
.navs {
  width: 100%;
  height: auto;
  /*margin-top: 3%;*/
  margin-bottom: 1%;
  padding-bottom: 3%;
  display: flex;
  background-color: #FFFFFF;


}

.navs navigator{
   width: 90%;
   height: auto;
   display: flex;
   flex-direction: column;
   align-items: center;

}
.nav-image{
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
  /*height: 40rpx;*/
}
.nav-text{
  font-size: 25rpx;
  color: gray;
  display: flex;
}


/* 列表 */
.person-list {
  display: flex;
  flex-direction: column;
  align-items: left;
}
.person-list navigator {
   display:flex;
   width:100%;
   background-color: #FFFFFF;
   justify-content: center;
   align-items: center;
   margin-top: 1%;
}
