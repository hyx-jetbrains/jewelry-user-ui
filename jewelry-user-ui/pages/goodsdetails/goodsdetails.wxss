page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
/* 直接设置swiper属性 */
.goodsGun{
  width: 100%;
  height: auto;
  display:block;
 
}


swiper{
  width: 100%;
}

block swiper-item {
  width: 100%;
  height: 100%;
}
.contentdes{
  width: 90%;
  height: auto;
  margin-left: 5%; 
  display: flex;
  flex-direction: column;
  justify-content: center;
}



.imgBanner{
  width: 100%;
}

/*商品的标题和商品的价格*/
.detail {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
}
.title {
  width: 80%;
  font-size: 40rpx;
  margin: 10rpx;
  color: black;
}
.pricesess {
  width: 80%;
  color: #C89F5F;
  font-size: 40rpx;
  margin: 10rpx;
}

.separate{
  width: 100%;
  height: 20rpx;
  background-color: #F5F5F5;
}

.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}
.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}
.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 110rpx;
}
.button-green {
  background-color: #EDE7D0;
  color: #BDA06E; 
}
.button-red {
  background-color: #C79E60;
}
.image_detail {
  width: 100%;
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}
.detail-nav image {
  width: 70rpx;
  height: 50rpx;
  margin: 20rpx 40rpx;
}
.line_nav {
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}

.temp {
  height: 100rpx;
}
text {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 10rpx;
}
.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 10rpx;
}

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  width: 100%;
  height: 35%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}

/*隐形弹窗里的样式*/
.pages{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.prices{
  width: 100%;
  height: 40%;
  display: flex;
  flex-direction: row;
  font-size: 40rpx;
  color: #666666;
  padding-bottom: 3%;
  margin-top: 2%;
  border-bottom: 1rpx solid #F5F5F5;
  align-content:center;
}
.price{
  width: 15%;
  display: flex;
  margin-left: 10%;
}
.pricees01{
  width: 20%;
  display: flex;
  flex-direction: row;
  color: #848484;
}
.pricees{
  width: 35%;
  display: flex;
  flex-direction: row;
  color: #C89F5F;
}

/*加减符号的样式*/
.pricees02{
  width: 35%;
  height: 100%;
  display: flex;
  flex-direction: row;
  color: #C89F5F;
  border:2rpx solid #F5F5F5;
  justify-content: space-around;
  align-items: center;
}
.jian{
  color: #666666;
  width: 25%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 2%;
}
.inputnums{
  display: flex;
  width: 30%;
  justify-content: center;
  align-items: center;
  border-right:2rpx solid #F5F5F5;
  border-left:2rpx solid #F5F5F5;
}

.inputnum{
  display: flex;
  width: 100%;
}
.normal{
  width: 25%;
  display: flex;
  color: #666666;
  margin-bottom: 2%;
  align-items: center;
  justify-content: center;
}

.btn{
  display: flex;
  width: 100%;
  height: 100%;
  margin-top: 3%;
  background-color: #C79F5E;
  color: #ffffff;
  font-size: 40rpx;
  align-items: center;
  justify-content: center;
}

/*商品详情切换*/
.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}
.swiper-tab-item{
    width: 30%; 
    color:#434343;
}
.active{
    color:#C89F5F;
    border-bottom: 4rpx solid #C89F5F;
}
swiper{
  text-align: center;
}

